#include<stdio.h>
#include<stdlib.h>

int main(){
//輸入一正整數，判斷為奇數或偶數
int number;
printf("請輸入一個整數");
scanf("%d ",&number);
switch (number){
	case 3:
	case 4:
	case 5:
	printf("春");
	break;
	case 6:
	case	 7:
	case	 8:
	printf("夏");
	break;
	case 9:
	case 10:
	case 11:
	printf("秋");
	break;
	case 12:
	case 1:
	case 2:
	printf("冬");
	break;
	default : printf("錯誤");
	}
	

system("pause");
return 0;

}
