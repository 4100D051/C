#include <stdio.h> 
#include <stdlib.h>
#define MAX 6 //讓數值固定在6

int main()
{
	int  i; //初始
	i = 1;
	do{
		printf("= %d\n", i);
		i++; //變化量
	}while (i <= MAX /* 繼續條件*/);
    
	printf("離開時的i =	%d\n", i);
	
	for(i = 1; i <= MAX ; i++){
        printf("%d\n", i);
    }
    printf("離開時的i =	%d\n", i);
	
    system("PAUSE");
	return 0;
}




