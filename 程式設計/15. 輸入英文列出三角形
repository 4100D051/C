#include <stdio.h>
#include <stdlib.h> 

int main()
{
    char i,j;
    for(i='A';i<='G';i++){
        for(j=i;j<='G';j++){
            printf("%c ",j);
        }
        printf("\n");
    }
	
	system("PAUSE");
	return 0
  }
  
  ---------------------------------------------------------
  
  #include <stdio.h>
#include <stdlib.h> 

int main()
{
    char i,j;
    for(i='A';i<='G';i++){
        
        for(j='A';j<=i;j++){
            printf("%c ",j);
        }
        printf("\n");
    }

	
	system("PAUSE");
	return 0;
}
