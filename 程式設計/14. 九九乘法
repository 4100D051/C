#include <stdio.h>
#include <stdlib.h> 

int main()
{
    int i,j;

for(i = 1 ; i <= 9 ; i++){
    for( j =1 ; j <= 9 ; j++ ){
        printf(" %d*%d=%2d",j,i,(i*j));
        
    }
    printf("\n");
}
	
	system("PAUSE");
	return 0;
}

------------------------------------------------------------------------------

#include <stdio.h>
#include <stdlib.h> 

int main()
{
    int i,j;
    i = 1;
while(i <= 9){
    for( j =1 ; j <= 9 ; j++ ){
        printf(" %d*%d=%2d",j,i,(i*j));
        
    }
    printf("\n");
    i++;
}
	
	system("PAUSE");
	return 0;
}
		
		
