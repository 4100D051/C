  #include <stdio.h>  
#include <stdlib.h>                        
int main () {
	int num;
	//提醒使用者輸入1~100的整數
	printf("請輸入1~100的整數");
	//讀取使用者資料
	scanf("%d",&num);

	//判斷使用者輸入的資料是否小於,等於或大於50 
	//根據判斷結果輸出 
	//如果使用者輸入的資料小於50,輸出 你輸入的資料小於50 
	if(num<50){
		printf("你輸入的資料小於50");
	}
	//如果使用者輸入的資料等於50,輸出 你輸入的資料等於50 
		if(num==50){
		printf("你輸入的資料等於50");
	}
	//如果使用者輸入的資料大於50,輸出 你輸入的資料大於50 
		if(num>50){
		printf("你輸入的資料大於50");
	}
	
	system("pause");
	return 0;                 
} 
