#include <iostream>
using namespace std;

int main() {
  int myAge = 35; //把35放進myAge裡
  cout << "I am " << myAge << " years old.";
  return 0;
}
## I am 35 years old.
------------------------------------------
#include <iostream>
using namespace std;

int main() {
  int x = 5; //5放進x裡
  int y = 6; //6放進y裡
  int sum = x + y; //x+y的總合會放進sum裡
  cout << sum;
  return 0;
}
