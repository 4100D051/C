#include <stdio.h>  
#include <stdlib.h>                        
int main () {
float a,b,c;         //int也可以(int只能輸入整數)
printf("請輸入上底 下底 高");
scanf("%f",&a);     //輸入scanf時基本型態一定要加&
scanf("%f",&b);
scanf("%f",&c);
float x = ((a + b) *c) /2;
if (a>=1 && a<100 , b>=1 && b<100 , c>=1 && c<100)
    
	{
		printf("%.2f",x);      //輸入printf時基本型態不用加&!!!!!
	}
	
	 		else
     {
		 	
		printf("輸入錯誤");
	 }
		system("pause");
		return 0;
	}
