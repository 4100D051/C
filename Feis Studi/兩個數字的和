#include <stdio.h>  
#include <stdlib.h>                        
int main () {
int integer1;   
int integer2;
int sum;
printf("Please enter the first integer: ");
scanf("%d",&integer1);                          //scanf表示從電腦讀入資料
printf("Please enter the second integer: ");
scanf("%d",&integer2);
sum = integer1 + integer2;
printf("Sum is %d.",sum);
	return 0;              
}

